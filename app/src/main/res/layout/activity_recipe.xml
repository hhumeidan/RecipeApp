<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeActivity">


    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"

        android:background="@drawable/custom_button5"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"
        app:srcCompat="@drawable/baseline_keyboard_backspace_24"
        />
    <TextView
        android:id="@+id/reipe_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Salmon "
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/reipe_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:text="Beef"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/reipe_name"

        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginStart="32dp"

        android:layout_marginTop="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reipe_name"
        app:srcCompat="@drawable/food1" />

    <LinearLayout
        android:id="@+id/relout"
        android:layout_width="402dp"
        android:layout_height="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/tv_reipe_ingrid"
            android:layout_width="117dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:text="Ingridgridients ("
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/reipe_ingrid"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:text="12"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/braket"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:text=")"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/reipe_time"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:text="40"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/reipe_Min"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:text="Min"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/imageButton1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/custom_button"
            android:text="1 Serving   V"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="13sp" />


    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_width="406dp"
        android:layout_height="338dp"
        android:background="@drawable/custom_boarder2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></View>

    <LinearLayout
        android:id="@+id/relout2"
        android:layout_width="400dp"
        android:layout_height="334dp"
        android:background="@drawable/custom_boarder"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:context=".CatActivity">

        <GridView
            android:id="@+id/lv_course"
            android:layout_width="400dp"
            android:layout_height="275dp"
            android:numColumns="1"
            android:padding="2dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="391dp"></GridView>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_getstart"
        android:layout_width="210dp"
        android:layout_height="52dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/custom_button3"
        android:text="Start Cook!    ->"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintStart_toStartOf="parent"></androidx.appcompat.widget.AppCompatButton>





</androidx.constraintlayout.widget.ConstraintLayout>